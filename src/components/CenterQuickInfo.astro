---
// Quick info card with hours, contact, and key facts
interface Props {
  phoneNumber: string;
  address: string;
  hours: {
    day: string;
    time: string;
  }[];
  quickFacts?: {
    icon: string;
    text: string;
  }[];
}

const { phoneNumber, address, hours, quickFacts } = Astro.props;
---

<section class="py-12 bg-gray-50">
  <div class="container mx-auto px-4 max-w-6xl">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      
      <!-- Contact Info -->
      <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-100">
        <div class="flex items-center gap-3 mb-4">
          <div class="w-12 h-12 rounded-xl bg-center-primary/10 flex items-center justify-center">
            <svg class="w-6 h-6 text-center-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900">Contact Us</h3>
        </div>
        <div class="space-y-3">
          <a 
            href={`tel:${phoneNumber.replace(/[^0-9]/g, "")}`}
            class="block text-lg font-semibold text-center-accent hover:text-center-primary transition-colors"
          >
            {phoneNumber}
          </a>
          <p class="text-gray-600 text-sm leading-relaxed">
            {address}
          </p>
          <a 
            href={`https://www.google.com/maps/search/?api=1&query=${encodeURIComponent(address)}`}
            target="_blank"
            class="inline-flex items-center text-sm font-semibold text-center-primary hover:text-center-accent transition-colors"
          >
            Get Directions
            <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Hours -->
      <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-100">
        <div class="flex items-center gap-3 mb-4">
          <div class="w-12 h-12 rounded-xl bg-center-primary/10 flex items-center justify-center">
            <svg class="w-6 h-6 text-center-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900">Center Hours</h3>
        </div>
        <div class="space-y-2">
          {hours.map(({ day, time }) => (
            <div class="flex justify-between text-sm">
              <span class="text-gray-600">{day}</span>
              <span class="font-semibold text-gray-900">{time}</span>
            </div>
          ))}
        </div>
      </div>

      <!-- Quick Facts -->
      {quickFacts && (
        <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-100">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-12 h-12 rounded-xl bg-center-primary/10 flex items-center justify-center">
              <svg class="w-6 h-6 text-center-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900">Quick Facts</h3>
          </div>
          <div class="space-y-3">
            {quickFacts.map(({ icon, text }) => (
              <div class="flex items-center gap-2">
                <span class="text-xl">{icon}</span>
                <span class="text-sm text-gray-700">{text}</span>
              </div>
            ))}
          </div>
        </div>
      )}
    </div>
  </div>
</section>