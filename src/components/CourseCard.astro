---
// Updated CourseCard with clean, modern design
import StarRating from './display/StarRating.astro';

interface CourseData {
    title: string;
    instructor: string;
    rating: number; 
    price: string; 
    heroImage: string; 
    linkUrl: string;
}

interface Props {
    course: CourseData;
    isCorporateStyle?: boolean; 
}

const { course, isCorporateStyle = false } = Astro.props;
---

<a href={course.linkUrl} class="group block h-full bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-xl transition-all duration-300 border border-gray-100 hover:border-corporate-primary">
    <!-- Course Image / Thumbnail -->
    <div class="h-48 overflow-hidden bg-gray-100">
        <img 
            src={course.heroImage} 
            alt={`Image for ${course.title}`} 
            class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
            onerror="this.onerror=null;this.src='https://placehold.co/600x400/011F4B/FFFFFF?text=Mind+Foundry';"
        />
    </div>
    
    <!-- Content Details -->
    <div class="p-6">
        <!-- Title -->
        <h3 class="text-xl font-bold text-gray-900 mb-2 line-clamp-2 group-hover:text-corporate-primary transition-colors duration-300">
            {course.title}
        </h3>
        
        <!-- Instructor -->
        <p class="text-sm text-gray-600 mb-4">
            {course.instructor}
        </p>

        <!-- Meta Data (Rating and Price) -->
        <div class="flex items-center justify-between pt-4 border-t border-gray-100">
            <!-- Rating -->
            <div class="flex items-center gap-2">
                <StarRating rating={course.rating} isCorporateStyle={false} />
                <span class="text-sm font-semibold text-gray-700">
                    {course.rating.toFixed(1)}
                </span>
            </div>
            
            <!-- Price / Format -->
            <span class="text-sm font-bold text-corporate-primary bg-corporate-primary/10 px-3 py-1 rounded-full">
                {course.price}
            </span>
        </div>
    </div>
</a>