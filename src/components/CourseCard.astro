---
// This component now receives a full 'course' object from the content files.
// It is used by both Corporate and Center sites.

import StarRating from './display/StarRating.astro';

interface CourseData {
    title: string;
    instructor: string;
    rating: number; 
    price: string; 
    heroImage: string; 
    linkUrl: string;
}

interface Props {
    course: CourseData; // Expects a single course object
    isCorporateStyle: boolean; 
}

const { course, isCorporateStyle = true } = Astro.props;

// Determine colors based on the site context
const cardBg = isCorporateStyle ? 'bg-corporate-bg-dark' : 'bg-white';
const titleColor = isCorporateStyle ? 'text-white' : 'text-text-dark';
const textColor = isCorporateStyle ? 'text-gray-300' : 'text-text-body';
const accentColor = isCorporateStyle ? 'bg-corporate-primary' : 'bg-center-primary';
const shadow = isCorporateStyle ? 'shadow-xl' : 'shadow-lg hover:shadow-2xl';
---

<a href={course.linkUrl} class={`
    block h-full transition duration-300 transform hover:scale-[1.02] 
    rounded-xl overflow-hidden ${shadow} ${cardBg} border 
    ${isCorporateStyle ? 'border-corporate-primary/30' : 'border-gray-200'}
`}>
    <!-- 1. Course Image / Thumbnail -->
    <div class="h-40 overflow-hidden">
        <img 
            src={course.heroImage} 
            alt={`Image for ${course.title}`} 
            class="w-full h-full object-cover transition-transform duration-500 hover:scale-110"
            onerror="this.onerror=null;this.src='https://placehold.co/600x400/011F4B/FFFFFF?text=Mind+Foundry';"
        />
    </div>
    
    <!-- 2. Content Details -->
    <div class="p-4 flex flex-col justify-between h-[calc(100%-10rem)]">
        <div>
            <!-- Title -->
            <h3 class={`text-h3 font-display mb-2 ${titleColor} line-clamp-2`}>
                {course.title}
            </h3>
            
            <!-- Instructor -->
            <p class={`text-sm ${textColor} font-corp-body mb-2`}>
                Taught by: <span class="font-bold">{course.instructor}</span>
            </p>
        </div>

        <!-- Meta Data (Rating and Price) -->
        <div class="mt-4 pt-4 border-t border-gray-700/50">
            <div class="flex items-center justify-between">
                <!-- Rating -->
                <div class="flex items-center space-x-1">
                    <StarRating rating={course.rating} isCorporateStyle={isCorporateStyle} />
                    <span class={`text-sm font-bold ${textColor}`}>({course.rating.toFixed(1)})</span>
                </div>
                
                <!-- Price / Format -->
                <span class={`text-sm font-bold px-3 py-1 rounded-full ${accentColor} ${isCorporateStyle ? 'text-white' : 'text-text-dark'}`}>
                    {course.price}
                </span>
            </div>
        </div>
    </div>
</a>