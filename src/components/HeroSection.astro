---
// Clean, modern hero section with white background and strategic color accents
interface Props {
  title: string;
  subtitle: string;
  primaryCTA: {
    text: string;
    href: string;
  };
  secondaryCTA?: {
    text: string;
    href: string;
  };
}

const { title, subtitle, primaryCTA, secondaryCTA } = Astro.props;
---

<section class="relative bg-white py-20 md:py-28 overflow-hidden">
  <!-- Decorative background elements -->
  <div class="absolute top-0 right-0 w-96 h-96 bg-corporate-secondary/5 rounded-full blur-3xl"></div>
  <div class="absolute bottom-0 left-0 w-96 h-96 bg-corporate-primary/5 rounded-full blur-3xl"></div>
  
  <div class="container mx-auto px-4 max-w-6xl relative z-10">
    <div class="text-center max-w-4xl mx-auto">
      <!-- Badge graphic accent -->
      <div class="inline-flex items-center gap-2 bg-corporate-secondary/10 text-corporate-primary px-4 py-2 rounded-full mb-6 text-sm font-semibold">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
        </svg>
        Badge-Based Learning Platform
      </div>

      <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold text-gray-900 mb-6 leading-tight">
        {title}
      </h1>
      
      <p class="text-xl md:text-2xl text-gray-600 mb-10 max-w-3xl mx-auto leading-relaxed">
        {subtitle}
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a 
          href={primaryCTA.href}
          class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-white bg-corporate-primary rounded-full shadow-lg hover:bg-corporate-primary/90 hover:shadow-xl transform hover:scale-105 transition-all duration-200"
        >
          {primaryCTA.text}
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
          </svg>
        </a>
        
        {secondaryCTA && (
          <a 
            href={secondaryCTA.href}
            class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-corporate-primary bg-white border-2 border-corporate-primary rounded-full hover:bg-gray-50 transition-all duration-200"
          >
            {secondaryCTA.text}
          </a>
        )}
      </div>

      <!-- Trust indicators -->
      <div class="mt-12 flex flex-wrap justify-center items-center gap-8 text-sm text-gray-500">
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-corporate-secondary" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z"/>
          </svg>
          <span>10,000+ students</span>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-corporate-secondary" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
          </svg>
          <span>50+ locations</span>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-corporate-secondary" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
          </svg>
          <span>4.9â˜… average rating</span>
        </div>
      </div>
    </div>
  </div>
</section>