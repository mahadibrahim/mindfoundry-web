---
// Updated center footer with actual Mind Foundry logo
interface Props {
    centerName?: string;
    phoneNumber?: string;
    address?: string;
    hours?: { day: string; time: string; }[];
}

const { 
    centerName = "Springfield Center",
    phoneNumber = "(555) 123-4567",
    address = "123 Main Street, Springfield, OH 45501",
    hours = [
        { day: 'Mon-Fri', time: '3:00 PM - 7:00 PM' },
        { day: 'Saturday', time: '9:00 AM - 1:00 PM' },
        { day: 'Sunday', time: 'Closed' },
    ]
} = Astro.props;

const currentYear = new Date().getFullYear();

const quickLinks = [
    { name: 'Programs', href: '/programs' },
    { name: 'About Us', href: '/about' },
    { name: 'Meet the Team', href: '/team' },
    { name: 'Gallery', href: '/gallery' },
];

const parentResources = [
    { name: 'Parent Portal', href: '/portal' },
    { name: 'Learning Resources', href: '/resources' },
    { name: 'FAQ', href: '/faq' },
    { name: 'Safety & Policies', href: '/safety' },
];
---

<footer class="bg-white border-t border-gray-200">
    <!-- Newsletter Section -->
    <div class="bg-gradient-to-br from-center-primary/5 to-center-accent/5 border-b border-gray-200">
        <div class="container mx-auto px-4 py-10 max-w-7xl">
            <div class="max-w-2xl mx-auto text-center">
                <h3 class="text-2xl font-bold text-gray-900 mb-3">Stay in the Loop</h3>
                <p class="text-gray-600 mb-6">Get center updates, program announcements, and parenting tips</p>
                
                <form class="flex flex-col sm:flex-row gap-3">
                    <input 
                        type="email" 
                        placeholder="Enter your email"
                        class="flex-1 px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-center-primary focus:border-transparent"
                        required
                    />
                    <button 
                        type="submit"
                        class="px-6 py-3 bg-center-primary text-text-dark font-semibold rounded-lg hover:bg-center-primary/90 transition-colors whitespace-nowrap"
                    >
                        Sign Up
                    </button>
                </form>
            </div>
        </div>
    </div>

    <!-- Main Footer Content -->
    <div class="container mx-auto px-4 py-12 max-w-7xl">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-10">
            
            <!-- Contact Card -->
            <div class="lg:col-span-2">
                <div class="bg-gradient-to-br from-gray-50 to-white rounded-2xl p-6 border border-gray-100">
                    <div class="flex items-center gap-3 mb-4">
                        <img 
                            src="/images/mind-foundry-logo.png"
                            alt="Mind Foundry Logo"
                            class="h-8 w-auto"
                        />
                        <h4 class="text-xl font-bold text-gray-900">Visit Our Center</h4>
                    </div>
                    
                    <!-- Address -->
                    <div class="flex items-start gap-3 mb-4">
                        <div class="w-10 h-10 rounded-lg bg-center-primary/10 flex items-center justify-center flex-shrink-0">
                            <svg class="w-5 h-5 text-center-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                            </svg>
                        </div>
                        <div>
                            <p class="text-sm font-semibold text-gray-900">{address}</p>
                            <a 
                                href={`https://www.google.com/maps/search/?api=1&query=${encodeURIComponent(address)}`}
                                target="_blank"
                                class="text-sm text-center-primary hover:text-center-accent font-semibold inline-flex items-center gap-1 mt-1"
                            >
                                Get Directions
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                                </svg>
                            </a>
                        </div>
                    </div>

                    <!-- Phone -->
                    <div class="flex items-center gap-3 mb-4">
                        <div class="w-10 h-10 rounded-lg bg-center-primary/10 flex items-center justify-center flex-shrink-0">
                            <svg class="w-5 h-5 text-center-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                            </svg>
                        </div>
                        <a 
                            href={`tel:${phoneNumber.replace(/[^0-9]/g, "")}`}
                            class="text-lg font-bold text-center-accent hover:text-center-primary transition-colors"
                        >
                            {phoneNumber}
                        </a>
                    </div>

                    <!-- Hours -->
                    <div class="pt-4 border-t border-gray-200">
                        <h5 class="font-semibold text-gray-900 mb-2 text-sm">Center Hours</h5>
                        <div class="space-y-1">
                            {hours.map(({ day, time }) => (
                                <div class="flex justify-between text-sm">
                                    <span class="text-gray-600">{day}</span>
                                    <span class="font-semibold text-gray-900">{time}</span>
                                </div>
                            ))}
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Links -->
            <div>
                <h4 class="font-bold text-gray-900 mb-4">Quick Links</h4>
                <ul class="space-y-2">
                    {quickLinks.map(link => (
                        <li>
                            <a 
                                href={link.href} 
                                class="text-sm text-gray-600 hover:text-center-primary transition-colors"
                            >
                                {link.name}
                            </a>
                        </li>
                    ))}
                </ul>
            </div>

            <!-- Parent Resources -->
            <div>
                <h4 class="font-bold text-gray-900 mb-4">For Parents</h4>
                <ul class="space-y-2">
                    {parentResources.map(link => (
                        <li>
                            <a 
                                href={link.href} 
                                class="text-sm text-gray-600 hover:text-center-primary transition-colors"
                            >
                                {link.name}
                            </a>
                        </li>
                    ))}
                </ul>
            </div>
        </div>

        <!-- Bottom Bar -->
        <div class="pt-8 border-t border-gray-200">
            <div class="flex flex-col md:flex-row justify-between items-center gap-4">
                <p class="text-sm text-gray-600">
                    &copy; {currentYear} {centerName}. Part of Mind Foundry.
                </p>
                <div class="flex gap-6">
                    <a href="/privacy" class="text-sm text-gray-600 hover:text-center-primary transition-colors">Privacy</a>
                    <a href="/terms" class="text-sm text-gray-600 hover:text-center-primary transition-colors">Terms</a>
                    <a href="/accessibility" class="text-sm text-gray-600 hover:text-center-primary transition-colors">Accessibility</a>
                </div>
            </div>
        </div>
    </div>
</footer>