---
// Updated corporate footer with actual Mind Foundry logo
const currentYear = new Date().getFullYear();

const footerSections = [
    { 
        title: 'Learning Paths', 
        links: [
            { name: 'Find a Center', href: '/centers' },
            { name: 'At-Home Books', href: '/books' },
            { name: 'Group Programs', href: '/organizations' },
            { name: 'Browse Courses', href: '/courses' },
        ]
    },
    { 
        title: 'Company', 
        links: [
            { name: 'About Us', href: '/about' },
            { name: 'Our Mission', href: '/mission' },
            { name: 'Careers', href: '/careers' },
            { name: 'Press', href: '/press' },
        ]
    },
    { 
        title: 'Support', 
        links: [
            { name: 'Help Center', href: '/help' },
            { name: 'Contact Us', href: '/contact' },
            { name: 'Safety & Privacy', href: '/safety' },
            { name: 'Terms of Service', href: '/terms' },
        ]
    },
];

const socialLinks = [
    { name: 'Facebook', icon: 'facebook', href: '#' },
    { name: 'Twitter', icon: 'twitter', href: '#' },
    { name: 'Instagram', icon: 'instagram', href: '#' },
    { name: 'LinkedIn', icon: 'linkedin', href: '#' },
];
---

<footer class="bg-gray-50 border-t border-gray-200">
    <!-- Newsletter Section -->
    <div class="bg-white border-b border-gray-200">
        <div class="container mx-auto px-4 py-12 max-w-7xl">
            <div class="max-w-3xl mx-auto text-center">
                <h3 class="text-2xl font-bold text-gray-900 mb-3">Stay Connected</h3>
                <p class="text-gray-600 mb-6">Get learning tips, program updates, and exclusive offers delivered to your inbox</p>
                
                <form class="flex flex-col sm:flex-row gap-3 max-w-xl mx-auto">
                    <input 
                        type="email" 
                        placeholder="Enter your email"
                        class="flex-1 px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-corporate-primary focus:border-transparent"
                        required
                    />
                    <button 
                        type="submit"
                        class="px-6 py-3 bg-corporate-primary text-white font-semibold rounded-lg hover:bg-corporate-primary/90 transition-colors whitespace-nowrap"
                    >
                        Subscribe
                    </button>
                </form>
                
                <p class="text-xs text-gray-500 mt-3">We respect your privacy. Unsubscribe anytime.</p>
            </div>
        </div>
    </div>

    <!-- Main Footer Content -->
    <div class="container mx-auto px-4 py-12 max-w-7xl">
        <div class="grid grid-cols-2 md:grid-cols-5 gap-8 mb-10">
            
            <!-- Brand Column with actual logo -->
            <div class="col-span-2">
                <div class="flex items-center gap-3 mb-4">
                    <img 
                        src="/images/mind-foundry-logo.png"
                        alt="Mind Foundry Logo"
                        class="h-10 w-auto"
                    />
                    <span class="text-xl font-bold text-gray-900">Mind Foundry</span>
                </div>
                <p class="text-sm text-gray-600 mb-6 max-w-xs">
                    Badge-based learning for every child. Building confidence and skills through engaging, gamified education.
                </p>
                
                <!-- Trust Stats -->
                <div class="grid grid-cols-2 gap-4 mb-6">
                    <div>
                        <div class="text-2xl font-bold text-corporate-primary">10K+</div>
                        <div class="text-xs text-gray-600">Active Students</div>
                    </div>
                    <div>
                        <div class="text-2xl font-bold text-corporate-primary">50+</div>
                        <div class="text-xs text-gray-600">Learning Centers</div>
                    </div>
                </div>

                <!-- Social Links -->
                <div class="flex gap-3">
                    {socialLinks.map(social => (
                        <a 
                            href={social.href}
                            class="w-9 h-9 rounded-lg bg-gray-200 hover:bg-corporate-primary text-gray-600 hover:text-white flex items-center justify-center transition-all duration-200"
                            aria-label={social.name}
                        >
                            {social.icon === 'facebook' && (
                                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
                            )}
                            {social.icon === 'twitter' && (
                                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/></svg>
                            )}
                            {social.icon === 'instagram' && (
                                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0C8.74 0 8.333.015 7.053.072 5.775.132 4.905.333 4.14.63c-.789.306-1.459.717-2.126 1.384S.935 3.35.63 4.14C.333 4.905.131 5.775.072 7.053.012 8.333 0 8.74 0 12s.015 3.667.072 4.947c.06 1.277.261 2.148.558 2.913.306.788.717 1.459 1.384 2.126.667.666 1.336 1.079 2.126 1.384.766.296 1.636.499 2.913.558C8.333 23.988 8.74 24 12 24s3.667-.015 4.947-.072c1.277-.06 2.148-.262 2.913-.558.788-.306 1.459-.718 2.126-1.384.666-.667 1.079-1.335 1.384-2.126.296-.765.499-1.636.558-2.913.06-1.28.072-1.687.072-4.947s-.015-3.667-.072-4.947c-.06-1.277-.262-2.149-.558-2.913-.306-.789-.718-1.459-1.384-2.126C21.319 1.347 20.651.935 19.86.63c-.765-.297-1.636-.499-2.913-.558C15.667.012 15.26 0 12 0zm0 2.16c3.203 0 3.585.016 4.85.071 1.17.055 1.805.249 2.227.415.562.217.96.477 1.382.896.419.42.679.819.896 1.381.164.422.36 1.057.413 2.227.057 1.266.07 1.646.07 4.85s-.015 3.585-.074 4.85c-.061 1.17-.256 1.805-.421 2.227-.224.562-.479.96-.899 1.382-.419.419-.824.679-1.38.896-.42.164-1.065.36-2.235.413-1.274.057-1.649.07-4.859.07-3.211 0-3.586-.015-4.859-.074-1.171-.061-1.816-.256-2.236-.421-.569-.224-.96-.479-1.379-.899-.421-.419-.69-.824-.9-1.38-.165-.42-.359-1.065-.42-2.235-.045-1.26-.061-1.649-.061-4.844 0-3.196.016-3.586.061-4.861.061-1.17.255-1.814.42-2.234.21-.57.479-.96.9-1.381.419-.419.81-.689 1.379-.898.42-.166 1.051-.361 2.221-.421 1.275-.045 1.65-.06 4.859-.06l.045.03zm0 3.678c-3.405 0-6.162 2.76-6.162 6.162 0 3.405 2.76 6.162 6.162 6.162 3.405 0 6.162-2.76 6.162-6.162 0-3.405-2.76-6.162-6.162-6.162zM12 16c-2.21 0-4-1.79-4-4s1.79-4 4-4 4 1.79 4 4-1.79 4-4 4zm7.846-10.405c0 .795-.646 1.44-1.44 1.44-.795 0-1.44-.646-1.44-1.44 0-.794.646-1.439 1.44-1.439.793-.001 1.44.645 1.44 1.439z"/></svg>
                            )}
                            {social.icon === 'linkedin' && (
                                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
                            )}
                        </a>
                    ))}
                </div>
            </div>

            <!-- Link Columns -->
            {footerSections.map(section => (
                <div>
                    <h4 class="font-bold text-gray-900 mb-4">{section.title}</h4>
                    <ul class="space-y-2">
                        {section.links.map(link => (
                            <li>
                                <a 
                                    href={link.href} 
                                    class="text-sm text-gray-600 hover:text-corporate-primary transition-colors"
                                >
                                    {link.name}
                                </a>
                            </li>
                        ))}
                    </ul>
                </div>
            ))}
        </div>

        <!-- Bottom Bar -->
        <div class="pt-8 border-t border-gray-200">
            <div class="flex flex-col md:flex-row justify-between items-center gap-4">
                <p class="text-sm text-gray-600">
                    &copy; {currentYear} Mind Foundry. All rights reserved.
                </p>
                <div class="flex gap-6">
                    <a href="/privacy" class="text-sm text-gray-600 hover:text-corporate-primary transition-colors">Privacy Policy</a>
                    <a href="/terms" class="text-sm text-gray-600 hover:text-corporate-primary transition-colors">Terms</a>
                    <a href="/cookies" class="text-sm text-gray-600 hover:text-corporate-primary transition-colors">Cookie Policy</a>
                </div>
            </div>
        </div>
    </div>
</footer>