---
// Updated corporate header with new navigation structure
const navItems = [
    { 
        name: 'Learn In Person', 
        href: '/centers',
        description: 'Local learning centers near you'
    },
    { 
        name: 'Learn At Home', 
        href: '/books',
        description: 'Self-paced workbooks & materials'
    },
    { 
        name: 'Learn Online', 
        href: '/online',
        description: 'Digital courses & badge platform'
    },
    { 
        name: 'About', 
        href: '/about' 
    },
];
---

<header class="sticky top-0 z-50 bg-white border-b border-gray-200 shadow-sm">
    <div class="container mx-auto px-4 py-4 max-w-7xl">
        <div class="flex justify-between items-center">
            <!-- Logo with actual Mind Foundry logo -->
            <a href="/" class="flex items-center gap-3 group">
                <img 
                    src="/images/mind-foundry-logo.png"
                    alt="Mind Foundry Logo"
                    class="h-10 w-auto"
                />
                <div>
                    <span class="text-xl font-bold text-gray-900 block leading-none group-hover:text-corporate-primary transition-colors">Mind Foundry</span>
                    <span class="text-xs text-gray-500 leading-none">Badge-Based Learning</span>
                </div>
            </a>
            
            <!-- Desktop Navigation -->
            <nav class="hidden lg:flex items-center gap-8">
                {navItems.map(item => (
                    <a 
                        href={item.href} 
                        class="text-gray-700 hover:text-corporate-primary font-medium transition-colors relative group"
                        title={item.description}
                    >
                        {item.name}
                        <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-corporate-primary group-hover:w-full transition-all duration-300"></span>
                    </a>
                ))}
            </nav>

            <!-- Right Side Actions -->
            <div class="hidden lg:flex items-center gap-4">
                <!-- Trust Badge -->
                <div class="flex items-center gap-2 px-3 py-1 bg-gray-50 rounded-full">
                    <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                    </svg>
                    <span class="text-sm font-semibold text-gray-900">4.9</span>
                </div>

                <!-- Search Icon -->
                <button 
                    class="p-2 text-gray-700 hover:text-corporate-primary hover:bg-gray-50 rounded-lg transition-colors"
                    aria-label="Search"
                >
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                    </svg>
                </button>

                <!-- Primary CTA -->
                <a 
                    href="/get-started" 
                    class="inline-flex items-center px-6 py-2.5 bg-corporate-primary text-white font-semibold rounded-full hover:bg-corporate-primary/90 shadow-sm hover:shadow-md transition-all duration-200"
                >
                    Get Started
                    <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                    </svg>
                </a>
            </div>
            
            <!-- Mobile Menu Button -->
            <button 
                id="mobile-menu-button"
                class="lg:hidden p-2 text-gray-700 hover:bg-gray-100 rounded-lg transition-colors"
                aria-label="Toggle menu"
            >
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
                </svg>
            </button>
        </div>

        <!-- Mobile Menu (hidden by default) -->
        <div id="mobile-menu" class="hidden lg:hidden pt-4 pb-2">
            <nav class="flex flex-col gap-2">
                {navItems.map(item => (
                    <a 
                        href={item.href} 
                        class="px-4 py-3 text-gray-700 hover:bg-gray-50 hover:text-corporate-primary rounded-lg font-medium transition-colors"
                    >
                        <div class="font-semibold">{item.name}</div>
                        {item.description && (
                            <div class="text-xs text-gray-500 mt-0.5">{item.description}</div>
                        )}
                    </a>
                ))}
                <a 
                    href="/get-started" 
                    class="mt-2 px-4 py-3 bg-corporate-primary text-white font-semibold rounded-lg hover:bg-corporate-primary/90 text-center transition-colors"
                >
                    Get Started
                </a>
            </nav>
        </div>
    </div>
</header>

<script>
    // Simple mobile menu toggle
    document.addEventListener('DOMContentLoaded', () => {
        const button = document.getElementById('mobile-menu-button');
        const menu = document.getElementById('mobile-menu');
        
        button?.addEventListener('click', () => {
            menu?.classList.toggle('hidden');
        });
    });
</script>