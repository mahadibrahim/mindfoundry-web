---
import BaseLayout from './BaseLayout.astro';
import CorporateHeader from '../components/navigation/CorporateHeader.astro';
import CorporateFooter from '../components/navigation/CorporateFooter.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<BaseLayout title={title}>
	<!-- Apply the dark corporate background color to the entire body -->
	<div class="min-h-screen bg-corporate-bg-dark text-white">
		<CorporateHeader />
		
		<main class="py-12 md:py-20">
			<!-- Main content for the page -->
			<slot />
		</main>

		<CorporateFooter />
	</div>
</BaseLayout>