---

<CorporateLayout title="At-Home Learning Books - Mind Foundry">
    <!-- Hero -->
    <HeroSection 
        title="Master Skills at Home"
        subtitle="Badge-based workbooks that make learning fun, with proven results in 30 days or less"
        primaryCTA={{ text: "Browse Our Books", href: "#books" }}
        secondaryCTA={{ text: "See Sample Pages", href: "#preview" }}
    />

    <!-- Stats -->
    <StatsSection stats={stats} />

    <!-- Books Grid -->
    <section id="books" class="py-20 bg-gray-50">
        <div class="container mx-auto px-4 max-w-7xl">
            <div class="text-center mb-12">
                <h2 class="text-4xl font-bold text-gray-900 mb-4">Our Book Collection</h2>
                <p class="text-xl text-gray-600 max-w-2xl mx-auto">
                    Choose from our bestselling titles, each designed to build mastery through engaging, badge-based learning
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {books.map((book) => (
                    <BookCard book={book} />
                ))}
            </div>
        </div>
    </section>

    <!-- What Makes Our Books Different -->
    <FeatureGrid 
        title="What Makes Our Books Different"
        subtitle="More than just worksheets - a complete learning system"
        features={features}
    />

    <!-- Benefits Grid -->
