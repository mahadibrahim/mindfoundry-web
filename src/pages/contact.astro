---
export const prerender = true;

import CorporateLayout from '../layouts/CorporateLayout.astro';

const contactReasons = [
  { value: 'general', label: 'General Inquiry' },
  { value: 'support', label: 'Technical Support' },
  { value: 'billing', label: 'Billing Question' },
  { value: 'redemption', label: 'Code Redemption Issue' },
  { value: 'partnership', label: 'Partnership Opportunity' },
  { value: 'press', label: 'Press Inquiry' },
  { value: 'other', label: 'Other' }
];
---

<CorporateLayout title="Contact Us - Mind Foundry">
  <div class="min-h-screen bg-gradient-to-br from-mf-mint/20 via-white to-mf-blue/10">

    <!-- Hero Banner -->
    <section class="bg-gradient-to-r from-mf-teal to-mf-blue py-16 relative overflow-hidden">
      <div class="absolute top-0 right-0 w-64 h-64 bg-mf-pink/20 rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 left-0 w-48 h-48 bg-mf-mint/30 rounded-full blur-2xl"></div>
      <div class="container mx-auto px-4 max-w-6xl text-center relative z-10">
        <h1 class="font-display text-h1 text-white mb-4 drop-shadow-lg">Contact Us</h1>
        <p class="text-xl text-white/90 max-w-2xl mx-auto font-corp-body">
          Have a question or need help? We're here for you. Fill out the form below and we'll get back to you within 24 hours.
        </p>
      </div>
    </section>

    <div class="container mx-auto px-4 py-16 max-w-6xl">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 -mt-12">

        <!-- Contact Form -->
        <div class="lg:col-span-2">
          <div class="bg-white rounded-3xl shadow-2xl p-8 border-t-4 border-mf-teal">
            <form id="contact-form" class="space-y-6">

              <!-- Name Fields -->
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label for="firstName" class="block font-display text-lg text-text-dark mb-2">
                    First Name *
                  </label>
                  <input
                    type="text"
                    id="firstName"
                    name="firstName"
                    required
                    placeholder="Sarah"
                    class="w-full px-4 py-4 border-2 border-gray-200 rounded-xl focus:ring-4 focus:ring-mf-teal/30 focus:border-mf-teal transition-all text-lg"
                  />
                </div>

                <div>
                  <label for="lastName" class="block font-display text-lg text-text-dark mb-2">
                    Last Name *
                  </label>
                  <input
                    type="text"
                    id="lastName"
                    name="lastName"
                    required
                    placeholder="Johnson"
                    class="w-full px-4 py-4 border-2 border-gray-200 rounded-xl focus:ring-4 focus:ring-mf-teal/30 focus:border-mf-teal transition-all text-lg"
                  />
                </div>
              </div>

              <!-- Email -->
              <div>
                <label for="email" class="block font-display text-lg text-text-dark mb-2">
                  Email Address *
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  placeholder="sarah@example.com"
                  class="w-full px-4 py-4 border-2 border-gray-200 rounded-xl focus:ring-4 focus:ring-mf-teal/30 focus:border-mf-teal transition-all text-lg"
                />
              </div>

              <!-- Reason for Contact -->
              <div>
                <label for="reason" class="block font-display text-lg text-text-dark mb-2">
                  What can we help you with? *
                </label>
                <select
                  id="reason"
                  name="reason"
                  required
                  class="w-full px-4 py-4 border-2 border-gray-200 rounded-xl focus:ring-4 focus:ring-mf-teal/30 focus:border-mf-teal transition-all text-lg"
                >
                  <option value="">Select a topic</option>
                  {contactReasons.map(reason => (
                    <option value={reason.value}>{reason.label}</option>
                  ))}
                </select>
              </div>

              <!-- Order Number (optional) -->
              <div>
                <label for="orderNumber" class="block font-display text-lg text-text-dark mb-2">
                  Order Number <span class="text-text-body font-normal">(if applicable)</span>
                </label>
                <input
                  type="text"
                  id="orderNumber"
                  name="orderNumber"
                  placeholder="e.g., MF-12345"
                  class="w-full px-4 py-4 border-2 border-gray-200 rounded-xl focus:ring-4 focus:ring-mf-teal/30 focus:border-mf-teal transition-all text-lg"
                />
              </div>

              <!-- Message -->
              <div>
                <label for="message" class="block font-display text-lg text-text-dark mb-2">
                  Message *
                </label>
                <textarea
                  id="message"
                  name="message"
                  required
                  rows="5"
                  placeholder="Tell us how we can help..."
                  class="w-full px-4 py-4 border-2 border-gray-200 rounded-xl focus:ring-4 focus:ring-mf-teal/30 focus:border-mf-teal transition-all text-lg resize-none"
                ></textarea>
              </div>

              <!-- Submit Button -->
              <button
                type="submit"
                id="submit-btn"
                class="w-full bg-gradient-to-r from-mf-pink to-mf-teal text-white font-display text-h3 py-5 rounded-xl shadow-xl hover:shadow-2xl transform hover:scale-[1.02] transition-all duration-300"
              >
                <span id="button-text">Send Message</span>
                <svg id="button-icon" class="w-6 h-6 inline-block ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                </svg>
                <svg id="button-spinner" class="w-6 h-6 inline-block ml-2 animate-spin hidden" fill="none" viewBox="0 0 24 24">
                  <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                  <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
              </button>

            </form>

            <!-- Success Message (hidden by default) -->
            <div id="success-message" class="hidden text-center py-12">
              <div class="w-24 h-24 rounded-full bg-gradient-to-br from-mf-teal to-mf-mint mx-auto mb-6 flex items-center justify-center shadow-lg">
                <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/>
                </svg>
              </div>
              <h3 class="font-display text-h2 text-text-dark mb-2">Message Sent!</h3>
              <p class="text-body-lg text-text-body mb-6 font-corp-body">
                Thank you for reaching out. We'll get back to you within 24 hours.
              </p>
              <button
                onclick="location.reload()"
                class="text-mf-teal font-display text-lg hover:text-mf-pink transition-colors"
              >
                Send another message â†’
              </button>
            </div>
          </div>
        </div>

        <!-- Sidebar -->
        <div class="lg:col-span-1 space-y-6">

          <!-- Quick Contact -->
          <div class="bg-white rounded-3xl shadow-xl p-6 border-l-4 border-mf-pink">
            <h3 class="font-display text-h3 text-text-dark mb-6">Quick Contact</h3>
            <div class="space-y-4">
              <a href="mailto:support@mindfoundry.com" class="flex items-center gap-4 text-text-body hover:text-mf-teal transition-colors group">
                <div class="w-12 h-12 rounded-xl bg-mf-teal flex items-center justify-center group-hover:bg-mf-pink transition-colors">
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                </div>
                <div>
                  <p class="font-display text-text-dark">Email</p>
                  <p class="text-sm">support@mindfoundry.com</p>
                </div>
              </a>

              <a href="tel:+15551234567" class="flex items-center gap-4 text-text-body hover:text-mf-teal transition-colors group">
                <div class="w-12 h-12 rounded-xl bg-mf-pink flex items-center justify-center group-hover:bg-mf-teal transition-colors">
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                  </svg>
                </div>
                <div>
                  <p class="font-display text-text-dark">Phone</p>
                  <p class="text-sm">(555) 123-4567</p>
                </div>
              </a>
            </div>
          </div>

          <!-- Office Hours -->
          <div class="bg-gradient-to-br from-mf-navy to-mf-blue rounded-3xl shadow-xl p-6 text-white">
            <h3 class="font-display text-h3 mb-6">Support Hours</h3>
            <div class="space-y-3">
              <div class="flex justify-between">
                <span class="text-white/80">Monday - Friday</span>
                <span class="font-bold">9am - 6pm EST</span>
              </div>
              <div class="flex justify-between">
                <span class="text-white/80">Saturday</span>
                <span class="font-bold">10am - 4pm EST</span>
              </div>
              <div class="flex justify-between">
                <span class="text-white/80">Sunday</span>
                <span class="font-bold">Closed</span>
              </div>
            </div>
            <div class="mt-6 pt-4 border-t border-white/20">
              <p class="text-sm text-white/80">
                Email responses within 24 hours on business days
              </p>
            </div>
          </div>

          <!-- Common Questions -->
          <div class="bg-mf-mint/20 rounded-3xl p-6 border-2 border-mf-mint">
            <h3 class="font-display text-h3 text-text-dark mb-4">
              Quick Help
            </h3>
            <ul class="space-y-3">
              <li>
                <a href="/help#faq" class="text-text-body hover:text-mf-teal transition-colors flex items-center gap-2 font-corp-body">
                  <span class="w-2 h-2 rounded-full bg-mf-teal"></span>
                  Frequently Asked Questions
                </a>
              </li>
              <li>
                <a href="/redeem" class="text-text-body hover:text-mf-teal transition-colors flex items-center gap-2 font-corp-body">
                  <span class="w-2 h-2 rounded-full bg-mf-pink"></span>
                  Redeem Book Code
                </a>
              </li>
              <li>
                <a href="/help#getting-started" class="text-text-body hover:text-mf-teal transition-colors flex items-center gap-2 font-corp-body">
                  <span class="w-2 h-2 rounded-full bg-mf-blue"></span>
                  Getting Started Guide
                </a>
              </li>
            </ul>
          </div>

          <!-- Mailing Address -->
          <div class="bg-white rounded-3xl shadow-xl p-6 border-l-4 border-mf-blue">
            <h3 class="font-display text-h3 text-text-dark mb-4">Mailing Address</h3>
            <address class="text-text-body not-italic font-corp-body leading-relaxed">
              Mind Foundry, Inc.<br/>
              123 Learning Lane<br/>
              Suite 400<br/>
              Columbus, OH 43215
            </address>
          </div>

        </div>
      </div>
    </div>
  </div>
</CorporateLayout>

<script>
  function attachContactFormHandler() {
    const form = document.getElementById('contact-form');
    const submitBtn = document.getElementById('submit-btn');
    const buttonText = document.getElementById('button-text');
    const buttonIcon = document.getElementById('button-icon');
    const buttonSpinner = document.getElementById('button-spinner');
    const successMessage = document.getElementById('success-message');

    if (!form) {
      setTimeout(attachContactFormHandler, 100);
      return;
    }

    form.addEventListener('submit', async function(e) {
      e.preventDefault();

      // Show loading state
      if (submitBtn) submitBtn.disabled = true;
      if (buttonText) buttonText.textContent = 'Sending...';
      if (buttonIcon) buttonIcon.classList.add('hidden');
      if (buttonSpinner) buttonSpinner.classList.remove('hidden');

      try {
        // Collect form data
        const formData = new FormData(form);
        const data = {
          firstName: formData.get('firstName'),
          lastName: formData.get('lastName'),
          email: formData.get('email'),
          reason: formData.get('reason'),
          orderNumber: formData.get('orderNumber') || '',
          message: formData.get('message')
        };

        // Submit to API
        const response = await fetch('/api/contact', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });

        const result = await response.json();

        if (result.success) {
          // Show success message
          form.classList.add('hidden');
          if (successMessage) successMessage.classList.remove('hidden');
        } else {
          throw new Error(result.error || 'Failed to send message');
        }

      } catch (error) {
        console.error('Error:', error);
        alert('Error sending message: ' + error.message);

        // Re-enable button
        if (submitBtn) submitBtn.disabled = false;
        if (buttonText) buttonText.textContent = 'Send Message';
        if (buttonIcon) buttonIcon.classList.remove('hidden');
        if (buttonSpinner) buttonSpinner.classList.add('hidden');
      }
    });
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', attachContactFormHandler);
  } else {
    attachContactFormHandler();
  }
</script>
