---
export const prerender = true;

import CorporateLayout from '../layouts/CorporateLayout.astro';

const sampleActivities = [
  {
    badge: 'Problem Solver',
    capacity: 'Reasoning',
    description: 'Work through logic puzzles and learn systematic problem-solving approaches.',
    sample: 'If 3 cats catch 3 mice in 3 minutes, how many cats are needed to catch 100 mice in 100 minutes?',
    difficulty: 2,
    color: 'bg-mf-blue'
  },
  {
    badge: 'Story Builder',
    capacity: 'Expression',
    description: 'Create original stories using creative writing prompts and story structure.',
    sample: 'Write a story that starts with: "The door had been locked for 100 years, until today..."',
    difficulty: 1,
    color: 'bg-mf-pink'
  },
  {
    badge: 'Science Explorer',
    capacity: 'Curiosity',
    description: 'Design and conduct simple experiments to discover how the world works.',
    sample: 'Hypothesis: Plants grow faster with music. Design an experiment to test this.',
    difficulty: 3,
    color: 'bg-mf-teal'
  }
];

const badgeProgress = [
  { name: 'Problem Solver', progress: 75, color: 'bg-mf-blue' },
  { name: 'Story Builder', progress: 40, color: 'bg-mf-pink' },
  { name: 'Science Explorer', progress: 90, color: 'bg-mf-teal' },
  { name: 'Math Master', progress: 25, color: 'bg-mf-navy' }
];
---

<CorporateLayout title="Interactive Demo - Mind Foundry">
  <div class="bg-gradient-to-br from-mf-navy via-mf-blue/20 to-mf-mint/20 min-h-screen">

    <!-- Hero Section -->
    <section class="py-20 relative overflow-hidden">
      <!-- Decorative blobs -->
      <div class="absolute top-0 left-0 w-96 h-96 bg-mf-teal/20 rounded-full blur-3xl -translate-x-1/2 -translate-y-1/2"></div>
      <div class="absolute bottom-0 right-0 w-72 h-72 bg-mf-pink/20 rounded-full blur-3xl translate-x-1/2 translate-y-1/2"></div>

      <div class="container mx-auto px-4 max-w-6xl text-center relative z-10">
        <span class="inline-block px-6 py-3 bg-mf-pink text-white font-display text-lg rounded-full mb-6 shadow-lg">
          Interactive Preview
        </span>
        <h1 class="font-display text-h1 text-white mb-6 drop-shadow-lg">
          See Badge-Based Learning in Action
        </h1>
        <p class="text-xl text-white/90 max-w-2xl mx-auto font-corp-body">
          Explore sample activities from our workbooks and see how children earn badges through engaging challenges.
        </p>
      </div>
    </section>

    <!-- Sample Dashboard Preview -->
    <section class="py-12">
      <div class="container mx-auto px-4 max-w-6xl">
        <div class="bg-white rounded-3xl shadow-2xl overflow-hidden border-4 border-mf-mint">

          <!-- Mock Dashboard Header -->
          <div class="bg-gradient-to-r from-mf-teal via-mf-blue to-mf-navy px-8 py-8">
            <div class="flex items-center justify-between flex-wrap gap-4">
              <div class="flex items-center gap-4">
                <div class="w-16 h-16 rounded-2xl bg-white/20 flex items-center justify-center text-3xl shadow-lg">
                  üëß
                </div>
                <div class="text-white">
                  <h2 class="font-display text-h2">Emma's Dashboard</h2>
                  <p class="text-white/80 font-corp-body">Level 7 Explorer | 12 Badges Earned</p>
                </div>
              </div>
              <div class="text-white text-right bg-white/10 rounded-xl px-6 py-3">
                <p class="text-sm text-white/70">This Week's Goal</p>
                <p class="font-display text-h3">2 more activities</p>
              </div>
            </div>
          </div>

          <!-- Dashboard Content -->
          <div class="p-8">
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

              <!-- Badge Progress Section -->
              <div class="lg:col-span-1">
                <h3 class="font-display text-h3 text-text-dark mb-6">Badge Progress</h3>
                <div class="space-y-4">
                  {badgeProgress.map(badge => (
                    <div class="bg-gradient-to-r from-gray-50 to-white rounded-2xl p-4 border-2 border-gray-100 hover:border-mf-teal transition-colors">
                      <div class="flex justify-between items-center mb-3">
                        <span class="font-display text-text-dark">{badge.name}</span>
                        <span class="text-sm font-bold text-mf-teal bg-mf-teal/10 px-2 py-1 rounded-full">{badge.progress}%</span>
                      </div>
                      <div class="w-full bg-gray-200 rounded-full h-4 overflow-hidden">
                        <div
                          class={`${badge.color} h-4 rounded-full transition-all duration-1000`}
                          style={`width: ${badge.progress}%`}
                        ></div>
                      </div>
                    </div>
                  ))}
                </div>

                <!-- Earned Badges -->
                <div class="mt-8">
                  <h3 class="font-display text-h3 text-text-dark mb-6">Recent Badges</h3>
                  <div class="flex flex-wrap gap-3">
                    {['üéØ', 'üìö', 'üî¨', 'üé®', 'üßÆ', '‚úçÔ∏è'].map((emoji, i) => (
                      <div class={`w-16 h-16 rounded-2xl flex items-center justify-center text-3xl shadow-lg border-2 ${i % 2 === 0 ? 'bg-gradient-to-br from-mf-mint to-mf-teal border-mf-teal' : 'bg-gradient-to-br from-mf-pink/20 to-mf-pink/40 border-mf-pink'} hover:scale-110 transition-transform cursor-pointer`}>
                        {emoji}
                      </div>
                    ))}
                  </div>
                </div>
              </div>

              <!-- Activity Feed Section -->
              <div class="lg:col-span-2">
                <h3 class="font-display text-h3 text-text-dark mb-6">Sample Activities</h3>
                <div class="space-y-6">
                  {sampleActivities.map((activity, index) => (
                    <div class={`bg-white rounded-3xl p-6 border-l-4 ${activity.color} shadow-lg hover:shadow-xl transition-all hover:scale-[1.01]`}>
                      <div class="flex items-start justify-between mb-4">
                        <div>
                          <span class={`inline-block px-3 py-1 ${activity.color} text-white text-sm font-bold rounded-full mb-2`}>{activity.capacity}</span>
                          <h4 class="font-display text-h3 text-text-dark">{activity.badge}</h4>
                        </div>
                        <div class="flex items-center gap-1">
                          {[...Array(3)].map((_, i) => (
                            <svg
                              class={`w-6 h-6 ${i < activity.difficulty ? 'text-mf-pink' : 'text-gray-300'}`}
                              fill="currentColor"
                              viewBox="0 0 20 20"
                            >
                              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                            </svg>
                          ))}
                        </div>
                      </div>
                      <p class="text-text-body mb-4 font-corp-body">{activity.description}</p>
                      <div class="bg-mf-mint/20 rounded-xl p-4 border-2 border-mf-mint/50">
                        <p class="text-sm text-mf-teal font-bold mb-2">Sample Challenge:</p>
                        <p class="text-text-dark italic font-corp-body">"{activity.sample}"</p>
                      </div>
                      <button
                        class="mt-4 w-full py-4 bg-mf-teal text-white font-display text-lg rounded-xl hover:bg-mf-pink transition-colors shadow-lg hover:shadow-xl"
                        onclick="alert('This is a demo! Purchase a workbook to access full activities.')"
                      >
                        Try This Activity
                      </button>
                    </div>
                  ))}
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Demo Notice -->
        <p class="text-center text-white/80 text-sm mt-6 font-corp-body">
          This is a preview of the badge tracking dashboard. Full access included with workbook purchase.
        </p>
      </div>
    </section>

    <!-- How It Works -->
    <section class="py-20 bg-white">
      <div class="container mx-auto px-4 max-w-4xl">
        <h2 class="font-display text-h1 text-text-dark mb-16 text-center">How Badge Learning Works</h2>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="text-center group">
            <div class="w-24 h-24 rounded-3xl bg-mf-teal flex items-center justify-center text-5xl mx-auto mb-6 shadow-xl group-hover:scale-110 group-hover:bg-mf-pink transition-all duration-300">
              üìñ
            </div>
            <h3 class="font-display text-h3 text-text-dark mb-3">1. Work Through Activities</h3>
            <p class="text-text-body font-corp-body">
              Each workbook contains hands-on activities designed to build specific skills progressively.
            </p>
          </div>

          <div class="text-center group">
            <div class="w-24 h-24 rounded-3xl bg-mf-blue flex items-center justify-center text-5xl mx-auto mb-6 shadow-xl group-hover:scale-110 group-hover:bg-mf-pink transition-all duration-300">
              ‚úÖ
            </div>
            <h3 class="font-display text-h3 text-text-dark mb-3">2. Demonstrate Mastery</h3>
            <p class="text-text-body font-corp-body">
              Complete challenges that prove you truly understand the skill, not just participated.
            </p>
          </div>

          <div class="text-center group">
            <div class="w-24 h-24 rounded-3xl bg-mf-pink flex items-center justify-center text-5xl mx-auto mb-6 shadow-xl group-hover:scale-110 group-hover:bg-mf-teal transition-all duration-300">
              üèÜ
            </div>
            <h3 class="font-display text-h3 text-text-dark mb-3">3. Earn Your Badge</h3>
            <p class="text-text-body font-corp-body">
              Celebrate achievement with digital badges that build confidence and track progress.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Sample Pages Preview -->
    <section class="py-20 bg-gradient-to-b from-white to-mf-mint/20">
      <div class="container mx-auto px-4 max-w-6xl">
        <h2 class="font-display text-h1 text-text-dark mb-4 text-center">Peek Inside Our Workbooks</h2>
        <p class="text-body-lg text-text-body text-center mb-12 max-w-2xl mx-auto font-corp-body">
          Engaging layouts designed to make learning feel like an adventure
        </p>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {[
            { title: 'Activity Intro', desc: 'Activity introduction with clear objectives', color: 'from-mf-teal to-mf-blue' },
            { title: 'Guided Exercises', desc: 'Step-by-step guided exercises', color: 'from-mf-blue to-mf-navy' },
            { title: 'Challenge Page', desc: 'Challenge page to earn your badge', color: 'from-mf-pink to-mf-teal' }
          ].map((page, i) => (
            <div class="bg-white rounded-3xl shadow-xl overflow-hidden border-2 border-gray-100 hover:border-mf-teal transition-all hover:shadow-2xl hover:scale-105 group">
              <div class={`aspect-[3/4] bg-gradient-to-br ${page.color} flex items-center justify-center relative`}>
                <div class="text-center p-8">
                  <span class="text-7xl mb-4 block group-hover:scale-110 transition-transform">üìÑ</span>
                  <p class="text-white font-display text-xl">{page.title}</p>
                </div>
                <div class="absolute top-4 right-4 w-10 h-10 rounded-full bg-white/20 flex items-center justify-center text-white font-bold">
                  {i + 1}
                </div>
              </div>
              <div class="p-6">
                <p class="text-text-body font-corp-body text-center">
                  {page.desc}
                </p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 bg-gradient-to-r from-mf-pink via-mf-teal to-mf-blue relative overflow-hidden">
      <div class="absolute inset-0 bg-[url('data:image/svg+xml;base64,')] opacity-30"></div>
      <div class="container mx-auto px-4 max-w-4xl text-center relative z-10">
        <h2 class="font-display text-h1 text-white mb-6 drop-shadow-lg">Ready to Start Earning Badges?</h2>
        <p class="text-xl text-white/90 mb-10 max-w-2xl mx-auto font-corp-body">
          Get your child started with our research-backed workbooks. Each book includes digital badge tracking.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/books"
            class="px-10 py-5 bg-white text-mf-teal font-display text-h3 rounded-2xl hover:bg-mf-mint hover:text-mf-navy transition-all shadow-xl hover:shadow-2xl hover:scale-105"
          >
            Shop Workbooks
          </a>
          <a
            href="/redeem"
            class="px-10 py-5 bg-transparent text-white font-display text-h3 rounded-2xl border-3 border-white hover:bg-white hover:text-mf-pink transition-all shadow-xl hover:shadow-2xl hover:scale-105"
          >
            Have a Code? Redeem It
          </a>
        </div>
      </div>
    </section>

  </div>
</CorporateLayout>
