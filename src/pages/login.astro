---
export const prerender = false;

import CorporateLayout from '../layouts/CorporateLayout.astro';
---

<CorporateLayout title="Sign In - Mind Foundry">
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-mf-teal via-mf-blue to-mf-navy py-12 relative overflow-hidden">
    <div class="absolute top-0 right-0 w-64 h-64 bg-mf-pink/20 rounded-full blur-3xl"></div>
    <div class="container mx-auto px-4 max-w-6xl relative z-10 text-center">
      <h1 class="font-display text-h2 text-white mb-2">Welcome Back</h1>
      <p class="text-lg text-white/90 font-corp-body">Sign in to your Mind Foundry account</p>
    </div>
  </section>

  <div class="bg-gradient-to-b from-mf-mint/10 to-white py-12">
    <div class="container mx-auto px-4 max-w-md">

      <!-- Login Form Card -->
      <div class="bg-white rounded-3xl shadow-2xl p-8">

        <!-- Account Type Tabs -->
        <div class="flex mb-8 bg-gray-100 rounded-xl p-1">
          <button
            id="tab-parent"
            class="flex-1 py-3 px-4 rounded-lg font-display text-sm transition-all bg-white text-mf-teal shadow-sm"
          >
            Parent Login
          </button>
          <button
            id="tab-child"
            class="flex-1 py-3 px-4 rounded-lg font-display text-sm transition-all text-gray-500 hover:text-gray-700"
          >
            Child Login
          </button>
        </div>

        <!-- Parent Login Form -->
        <form id="parent-login-form" class="space-y-5">
          <div>
            <label class="block text-sm font-corp-body text-text-body mb-1">Email Address</label>
            <input
              type="email"
              name="email"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-mf-teal focus:border-transparent text-gray-900 bg-white placeholder:text-gray-400"
              placeholder="parent@example.com"
            />
          </div>

          <div>
            <label class="block text-sm font-corp-body text-text-body mb-1">Password</label>
            <div class="relative">
              <input
                type="password"
                name="password"
                id="parent-password"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-mf-teal focus:border-transparent pr-12 text-gray-900 bg-white placeholder:text-gray-400"
                placeholder="Enter your password"
              />
              <button
                type="button"
                class="toggle-password absolute right-3 top-1/2 -translate-y-1/2 text-gray-400 hover:text-gray-600"
                data-target="parent-password"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                </svg>
              </button>
            </div>
          </div>

          <div class="flex items-center justify-between">
            <label class="flex items-center gap-2 cursor-pointer">
              <input type="checkbox" name="remember" class="rounded text-mf-teal focus:ring-mf-teal" />
              <span class="text-sm text-text-body font-corp-body">Remember me</span>
            </label>
            <a href="/forgot-password" class="text-sm text-mf-teal hover:text-mf-pink font-corp-body">Forgot password?</a>
          </div>

          <button
            type="submit"
            class="w-full py-4 bg-gradient-to-r from-mf-teal to-mf-blue text-white font-display rounded-xl hover:opacity-90 transition-opacity shadow-lg"
          >
            Sign In
          </button>
        </form>

        <!-- Child Login Form (hidden by default) -->
        <form id="child-login-form" class="space-y-5 hidden">
          <div class="text-center mb-6">
            <div class="w-16 h-16 rounded-full bg-mf-pink/20 flex items-center justify-center text-3xl mx-auto mb-3">
              ü¶Å
            </div>
            <p class="text-sm text-text-body font-corp-body">Kids, ask a parent to help you sign in!</p>
          </div>

          <div>
            <label class="block text-sm font-corp-body text-text-body mb-1">Your Username</label>
            <input
              type="text"
              name="username"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-mf-pink focus:border-transparent text-gray-900 bg-white placeholder:text-gray-400"
              placeholder="coolkid123"
            />
          </div>

          <div>
            <label class="block text-sm font-corp-body text-text-body mb-1">Your PIN</label>
            <div class="flex gap-2 justify-center">
              <input type="text" maxlength="1" class="w-12 h-14 text-center text-2xl font-display border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-mf-pink focus:border-transparent text-gray-900 bg-white" />
              <input type="text" maxlength="1" class="w-12 h-14 text-center text-2xl font-display border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-mf-pink focus:border-transparent text-gray-900 bg-white" />
              <input type="text" maxlength="1" class="w-12 h-14 text-center text-2xl font-display border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-mf-pink focus:border-transparent text-gray-900 bg-white" />
              <input type="text" maxlength="1" class="w-12 h-14 text-center text-2xl font-display border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-mf-pink focus:border-transparent text-gray-900 bg-white" />
            </div>
            <p class="text-xs text-text-body text-center mt-2">Enter the 4-digit PIN your parent gave you</p>
          </div>

          <button
            type="submit"
            class="w-full py-4 bg-gradient-to-r from-mf-pink to-mf-teal text-white font-display rounded-xl hover:opacity-90 transition-opacity shadow-lg"
          >
            Let's Go!
          </button>
        </form>

        <!-- Divider -->
        <div class="flex items-center gap-4 my-8">
          <div class="flex-1 h-px bg-gray-200"></div>
          <span class="text-sm text-text-body font-corp-body">or</span>
          <div class="flex-1 h-px bg-gray-200"></div>
        </div>

        <!-- Social Login -->
        <div class="space-y-3">
          <button class="w-full py-3 px-4 border border-gray-300 rounded-xl font-corp-body text-text-body hover:bg-gray-50 transition-colors flex items-center justify-center gap-3">
            <svg class="w-5 h-5" viewBox="0 0 24 24">
              <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
              <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
              <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
              <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
            </svg>
            Continue with Google
          </button>
          <button class="w-full py-3 px-4 border border-gray-300 rounded-xl font-corp-body text-text-body hover:bg-gray-50 transition-colors flex items-center justify-center gap-3">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.865 8.166 6.839 9.489.5.092.682-.217.682-.482 0-.237-.008-.866-.013-1.7-2.782.604-3.369-1.34-3.369-1.34-.454-1.156-1.11-1.463-1.11-1.463-.908-.62.069-.608.069-.608 1.003.07 1.531 1.03 1.531 1.03.892 1.529 2.341 1.087 2.91.831.092-.646.35-1.086.636-1.336-2.22-.253-4.555-1.11-4.555-4.943 0-1.091.39-1.984 1.029-2.683-.103-.253-.446-1.27.098-2.647 0 0 .84-.269 2.75 1.025A9.578 9.578 0 0112 6.836c.85.004 1.705.114 2.504.336 1.909-1.294 2.747-1.025 2.747-1.025.546 1.377.203 2.394.1 2.647.64.699 1.028 1.592 1.028 2.683 0 3.842-2.339 4.687-4.566 4.935.359.309.678.919.678 1.852 0 1.336-.012 2.415-.012 2.743 0 .267.18.578.688.48C19.138 20.163 22 16.418 22 12c0-5.523-4.477-10-10-10z"/>
            </svg>
            Continue with GitHub
          </button>
        </div>

        <!-- Create Account Link -->
        <p class="text-center text-sm text-text-body font-corp-body mt-8">
          Don't have an account? <a href="/get-started" class="text-mf-teal hover:text-mf-pink font-display">Create one free</a>
        </p>
      </div>

      <!-- Help Link -->
      <p class="text-center text-sm text-text-body font-corp-body mt-6">
        Having trouble signing in? <a href="/help" class="text-mf-teal hover:text-mf-pink">Get help</a>
      </p>

    </div>
  </div>

  <script>
    // Tab switching
    const tabParent = document.getElementById('tab-parent');
    const tabChild = document.getElementById('tab-child');
    const parentForm = document.getElementById('parent-login-form');
    const childForm = document.getElementById('child-login-form');

    tabParent?.addEventListener('click', () => {
      tabParent.className = 'flex-1 py-3 px-4 rounded-lg font-display text-sm transition-all bg-white text-mf-teal shadow-sm';
      tabChild!.className = 'flex-1 py-3 px-4 rounded-lg font-display text-sm transition-all text-gray-500 hover:text-gray-700';
      parentForm?.classList.remove('hidden');
      childForm?.classList.add('hidden');
    });

    tabChild?.addEventListener('click', () => {
      tabChild.className = 'flex-1 py-3 px-4 rounded-lg font-display text-sm transition-all bg-white text-mf-pink shadow-sm';
      tabParent!.className = 'flex-1 py-3 px-4 rounded-lg font-display text-sm transition-all text-gray-500 hover:text-gray-700';
      childForm?.classList.remove('hidden');
      parentForm?.classList.add('hidden');
    });

    // Password visibility toggle
    document.querySelectorAll('.toggle-password').forEach(btn => {
      btn.addEventListener('click', () => {
        const targetId = btn.getAttribute('data-target');
        const input = document.getElementById(targetId!) as HTMLInputElement;
        if (input) {
          input.type = input.type === 'password' ? 'text' : 'password';
        }
      });
    });

    // Child PIN input auto-advance
    const pinInputs = document.querySelectorAll('#child-login-form input[maxlength="1"]');
    pinInputs.forEach((input, index) => {
      input.addEventListener('input', (e) => {
        const target = e.target as HTMLInputElement;
        if (target.value.length === 1 && index < pinInputs.length - 1) {
          (pinInputs[index + 1] as HTMLInputElement).focus();
        }
      });
      input.addEventListener('keydown', (e) => {
        const target = e.target as HTMLInputElement;
        if ((e as KeyboardEvent).key === 'Backspace' && target.value === '' && index > 0) {
          (pinInputs[index - 1] as HTMLInputElement).focus();
        }
      });
    });

    // Parent form submission
    parentForm?.addEventListener('submit', async (e) => {
      e.preventDefault();
      // In production, this would authenticate with the backend
      // For now, redirect to dashboard
      window.location.href = '/dashboard';
    });

    // Child form submission
    childForm?.addEventListener('submit', async (e) => {
      e.preventDefault();
      // In production, this would authenticate with the backend
      // For now, show a demo message
      alert('Child login coming soon! For now, ask your parent to log in.');
    });
  </script>
</CorporateLayout>
