    </div>
  </section>

  <!-- Our Solution: The Six Capacities -->
  <section class="py-16 bg-gradient-to-b from-mf-mint/10 to-white">
    <div class="container mx-auto px-4 max-w-6xl">
      <div class="text-center mb-12">
        <h2 class="font-display text-h2 text-text-dark mb-4">The Six Core Capacities</h2>
        <p class="text-lg text-text-body font-corp-body max-w-3xl mx-auto">
          Instead of teaching isolated subjects, Mind Foundry develops six fundamental capacities that prepare children for success in any field.
        </p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {capacities.map((capacity) => (
          <div class={`bg-white rounded-2xl p-6 shadow-lg border-2 border-${capacity.color}/20 hover:border-${capacity.color} transition-colors`}>
            <div class={`w-16 h-16 rounded-2xl bg-${capacity.color}/20 flex items-center justify-center text-3xl mb-4`}>
              {capacity.icon}
            </div>
            <h3 class="font-display text-xl text-text-dark mb-2">{capacity.name}</h3>
            <p class="text-text-body font-corp-body text-sm mb-4">{capacity.description}</p>
            <div class="space-y-2">
              {capacity.skills.map((skill) => (
                <div class="flex items-center gap-2 text-sm">
