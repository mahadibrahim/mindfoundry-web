---

<CorporateLayout title="Corporate Partnerships - Mind Foundry">
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-mf-navy via-mf-blue to-mf-teal py-20 relative overflow-hidden">
    <div class="absolute top-0 right-0 w-96 h-96 bg-mf-pink/20 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 left-0 w-72 h-72 bg-mf-mint/30 rounded-full blur-2xl"></div>
    <div class="container mx-auto px-4 max-w-6xl relative z-10">
      <div class="max-w-3xl">
        <div class="inline-block px-6 py-2 bg-white/20 rounded-full mb-6">
          <span class="text-white/90 font-corp-body">Corporate Partnerships</span>
        </div>
        <h1 class="font-display text-h1 text-white mb-6 drop-shadow-lg">
          Partner With Purpose
        </h1>
        <p class="text-xl text-white/90 font-corp-body leading-relaxed mb-8">
          Align your company with the future of education. Partner with Mind Foundry to support employee families, invest in communities, and develop tomorrow's workforce.
        </p>
        <div class="flex flex-wrap gap-4">
          <a href="/organizations/quote" class="px-8 py-4 bg-mf-pink text-white font-display rounded-xl hover:bg-mf-pink/90 transition-colors shadow-lg">
            Explore Partnership
          </a>
          <a href="/contact" class="px-8 py-4 bg-white/20 text-white font-display rounded-xl hover:bg-white/30 transition-colors border-2 border-white/30">
            Contact Our Team
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Partnership Types -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4 max-w-6xl">
      <div class="text-center mb-12">
        <h2 class="font-display text-h2 text-text-dark mb-4">Partnership Opportunities</h2>
        <p class="text-lg text-text-body font-corp-body max-w-2xl mx-auto">
          Multiple ways to create impact through Mind Foundry.
        </p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {partnershipTypes.map((type) => (
          <div class={`bg-white rounded-2xl p-8 shadow-lg border-2 border-${type.color}/20 hover:border-${type.color} transition-all`}>
            <div class={`w-16 h-16 rounded-2xl bg-${type.color}/20 flex items-center justify-center text-3xl mb-6`}>
              {type.icon}
            </div>
            <h3 class="font-display text-xl text-text-dark mb-3">{type.title}</h3>
            <p class="text-text-body font-corp-body mb-6">{type.description}</p>
            <ul class="space-y-2">
              {type.features.map((feature) => (
                <li class="flex items-center gap-2 text-sm text-text-body">
                  <svg class={`w-5 h-5 text-${type.color}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                  {feature}
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Benefits -->
  <section class="py-16 bg-gradient-to-b from-mf-mint/10 to-white">
    <div class="container mx-auto px-4 max-w-6xl">
      <div class="text-center mb-12">
        <h2 class="font-display text-h2 text-text-dark mb-4">Why Companies Partner With Us</h2>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {benefits.map((benefit) => (
          <div class="bg-white rounded-2xl p-6 shadow-lg border border-gray-100">
            <div class="text-4xl mb-4">{benefit.icon}</div>
            <h3 class="font-display text-lg text-text-dark mb-2">{benefit.title}</h3>
            <p class="text-text-body font-corp-body text-sm">{benefit.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Case Studies -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4 max-w-6xl">
      <div class="text-center mb-12">
        <h2 class="font-display text-h2 text-text-dark mb-4">Partner Success Stories</h2>
        <p class="text-lg text-text-body font-corp-body max-w-2xl mx-auto">
          See how leading companies are making an impact with Mind Foundry.
        </p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {caseStudies.map((study) => (
          <div class="bg-gradient-to-br from-mf-teal/10 to-mf-blue/10 rounded-2xl p-6 border border-mf-teal/20">
            <div class="text-5xl mb-4">{study.logo}</div>
            <div class="flex items-center gap-2 mb-3">
              <span class="text-xs px-2 py-1 bg-mf-teal/20 text-mf-teal rounded-full font-corp-body">{study.type}</span>
