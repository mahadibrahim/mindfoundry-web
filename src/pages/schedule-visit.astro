---
import BaseLayout from '../layouts/BaseLayout.astro';
import VisitRequestForm from '../components/VisitRequestForm.astro';

export const prerender = true;
---

<BaseLayout title="Schedule a Visit - Mind Foundry">
  <div class="min-h-screen bg-gradient-to-br from-center-primary/5 to-center-accent/5">
    
    <!-- Header -->
    <div class="bg-white border-b border-gray-200 sticky top-0 z-10">
      <div class="container mx-auto px-4 py-4 max-w-6xl">
        <a href="/centers" class="inline-flex items-center text-gray-600 hover:text-center-primary transition-colors">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Back to Centers
        </a>
      </div>
    </div>

    <div class="container mx-auto px-4 py-12 max-w-6xl">

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        
        <!-- Main Form -->
        <div class="lg:col-span-2">
          <div class="bg-white rounded-3xl shadow-xl p-8 border border-gray-200">
            
            <!-- Header -->
            <div class="text-center mb-8">
              <div class="w-20 h-20 rounded-full bg-gradient-to-br from-center-accent to-center-primary mx-auto mb-6 flex items-center justify-center shadow-lg">
                <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
              </div>
              
              <h1 class="text-4xl font-bold text-gray-900 mb-4">
                Request a Visit
              </h1>
              <p class="text-lg text-gray-600 max-w-2xl mx-auto">
                Fill out the form below and we will call you within 24 hours to schedule a time that works for you.
              </p>
            </div>

            <!-- Form Component -->
            <VisitRequestForm />

          </div>
        </div>

        <!-- Sidebar -->
        <div class="lg:col-span-1 space-y-6">
          
          <!-- What to Expect -->
          <div class="bg-white rounded-2xl shadow-lg p-6 border border-gray-200">
            <h3 class="text-xl font-bold text-gray-900 mb-4">
              What Happens Next
            </h3>
            <div class="space-y-4">
              <div class="flex items-start gap-3">
                <div class="text-2xl flex-shrink-0">ðŸ“§</div>
                <div>
                  <p class="text-sm font-semibold text-gray-900">Instant Confirmation</p>
                  <p class="text-sm text-gray-600">You will get an email right away</p>
                </div>
              </div>
              <div class="flex items-start gap-3">
                <div class="text-2xl flex-shrink-0">ðŸ“ž</div>
                <div>
                  <p class="text-sm font-semibold text-gray-900">We Call You</p>
                  <p class="text-sm text-gray-600">Within 24 hours to schedule</p>
                </div>
              </div>
              <div class="flex items-start gap-3">
                <div class="text-2xl flex-shrink-0">ðŸ“…</div>
                <div>
                  <p class="text-sm font-semibold text-gray-900">Pick a Time</p>
                  <p class="text-sm text-gray-600">Together we find what works</p>
                </div>
              </div>
              <div class="flex items-start gap-3">
                <div class="text-2xl flex-shrink-0">ðŸŽ‰</div>
                <div>
                  <p class="text-sm font-semibold text-gray-900">Visit Day</p>
                  <p class="text-sm text-gray-600">Tour, meet team, ask questions</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Visit Options -->
          <div class="bg-gradient-to-br from-center-primary/10 to-center-accent/10 rounded-2xl p-6 border-2 border-center-primary/20">
            <h3 class="text-lg font-bold text-gray-900 mb-4">
              Visit Options
            </h3>
            <div class="space-y-3">
              <div class="flex items-start gap-3">
                <svg class="w-6 h-6 text-center-accent flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                </svg>
                <div>
                  <p class="font-semibold text-gray-900 text-sm">In-Person Tour</p>
                  <p class="text-sm text-gray-600">Visit our center, meet team, see classrooms (45 min)</p>
                </div>
              </div>
              <div class="flex items-start gap-3">
                <svg class="w-6 h-6 text-center-accent flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                </svg>
                <div>
                  <p class="font-semibold text-gray-900 text-sm">Virtual Tour</p>
                  <p class="text-sm text-gray-600">Video call tour from home (30 min)</p>
                </div>
              </div>
            </div>
            <p class="text-xs text-gray-600 mt-4">
              Tell us your preference in the form and we will schedule accordingly
            </p>
          </div>

          <!-- Contact Info -->
          <div class="bg-white rounded-2xl shadow-lg p-6 border border-gray-200">
            <h3 class="text-lg font-bold text-gray-900 mb-4">
              Questions First?
            </h3>
            <p class="text-sm text-gray-600 mb-4">
              Prefer to chat before requesting? We are here to help.
            </p>
            <div class="space-y-3">
              <a href="tel:+15551234567" class="flex items-center gap-3 text-sm text-gray-700 hover:text-center-primary transition-colors">
                <svg class="w-5 h-5 text-center-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
                <span>(555) 123-4567</span>
              </a>
              <a href="mailto:hello@mindfoundry.com" class="flex items-center gap-3 text-sm text-gray-700 hover:text-center-primary transition-colors">
                <svg class="w-5 h-5 text-center-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
                <span>hello@mindfoundry.com</span>
              </a>
            </div>
          </div>

          <!-- Social Proof -->
          <div class="bg-blue-50 rounded-2xl p-6 border-2 border-blue-200">
            <div class="text-center">
              <div class="flex items-center justify-center gap-1 mb-2">
                {[...Array(5)].map(() => (
                  <svg class="w-5 h-5 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                  </svg>
                ))}
              </div>
              <p class="text-2xl font-bold text-gray-900 mb-1">
                4.9/5.0
              </p>
              <p class="text-sm text-gray-600">
                Based on 200+ parent reviews
              </p>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</BaseLayout>