---
import BaseLayout from '../../../layouts/BaseLayout.astro';

// Get query parameters
const url = new URL(Astro.request.url);
const parentName = url.searchParams.get('name') || 'there';
const childName = url.searchParams.get('child') || 'your child';

export const prerender = false;
---

<BaseLayout title="Visit Request Received - Mind Foundry">
  <div class="min-h-screen bg-gradient-to-br from-center-primary/5 to-center-accent/5 flex items-center justify-center px-4 py-12">
    <div class="max-w-2xl w-full">
      
      <!-- Success Card -->
      <div class="bg-white rounded-3xl shadow-2xl p-8 md:p-12 text-center border border-gray-200">
        
        <!-- Success Icon -->
        <div class="w-24 h-24 rounded-full bg-gradient-to-br from-green-400 to-green-600 mx-auto mb-8 flex items-center justify-center shadow-lg animate-bounce">
          <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path>
          </svg>
        </div>

        <!-- Success Message -->
        <h1 class="text-4xl font-bold text-gray-900 mb-4">
          Request Received! ðŸŽ‰
        </h1>
        
        <p class="text-xl text-gray-700 mb-8">
          Thanks, <strong>{parentName}</strong>! We will call you within 24 hours to schedule a time to meet you and {childName}.
        </p>

        <!-- Details -->
        <div class="bg-gradient-to-br from-center-primary/10 to-center-accent/10 rounded-2xl p-6 mb-8 border-2 border-center-primary/20">
          <h2 class="text-lg font-bold text-gray-900 mb-4">
            What Happens Next
          </h2>
          
          <div class="space-y-4 text-left">
            <div class="flex items-start gap-3">
              <div class="w-8 h-8 rounded-full bg-center-primary text-white font-bold flex items-center justify-center flex-shrink-0 text-sm">
                1
              </div>
              <div>
                <p class="text-sm font-semibold text-gray-900">
                  Check Your Email
                </p>
                <p class="text-sm text-gray-600">
                  You will receive a confirmation email within 5 minutes
                </p>
              </div>
            </div>

            <div class="flex items-start gap-3">
              <div class="w-8 h-8 rounded-full bg-center-primary text-white font-bold flex items-center justify-center flex-shrink-0 text-sm">
                2
              </div>
              <div>
                <p class="text-sm font-semibold text-gray-900">
                  We Will Call You
                </p>
                <p class="text-sm text-gray-600">
                  Our team will reach out within 24 hours to find a time that works
                </p>
              </div>
            </div>

            <div class="flex items-start gap-3">
              <div class="w-8 h-8 rounded-full bg-center-primary text-white font-bold flex items-center justify-center flex-shrink-0 text-sm">
                3
              </div>
              <div>
                <p class="text-sm font-semibold text-gray-900">
                  Schedule Together
                </p>
                <p class="text-sm text-gray-600">
                  We will find a date and time that is perfect for you
                </p>
              </div>
            </div>

            <div class="flex items-start gap-3">
              <div class="w-8 h-8 rounded-full bg-center-primary text-white font-bold flex items-center justify-center flex-shrink-0 text-sm">
                4
              </div>
              <div>
                <p class="text-sm font-semibold text-gray-900">
                  Visit Day
                </p>
                <p class="text-sm text-gray-600">
                  Meet our team, tour the facility, and explore programs
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- Quick Info -->
        <div class="bg-blue-50 rounded-xl p-6 mb-8 border-2 border-blue-200">
          <p class="text-sm text-gray-700 mb-3">
            <strong>Questions in the meantime?</strong>
          </p>
          <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
            <a href="tel:+15551234567" class="inline-flex items-center gap-2 text-sm text-center-primary hover:text-center-accent font-semibold transition-colors">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
              (555) 123-4567
            </a>
            <span class="text-gray-400 hidden sm:inline">|</span>
            <a href="mailto:hello@mindfoundry.com" class="inline-flex items-center gap-2 text-sm text-center-primary hover:text-center-accent font-semibold transition-colors">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              hello@mindfoundry.com
            </a>
          </div>
        </div>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/centers"
            class="inline-flex items-center justify-center px-8 py-4 bg-gradient-to-r from-center-primary to-center-accent text-white font-bold rounded-xl shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-200"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
            </svg>
            Back to Centers
          </a>
          
          <a
            href="/"
            class="inline-flex items-center justify-center px-8 py-4 bg-white text-center-primary font-bold rounded-xl border-2 border-center-primary hover:bg-center-primary/5 transition-all duration-200"
          >
            Explore Programs
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </a>
        </div>

        <!-- Social Proof -->
        <div class="mt-8 pt-8 border-t border-gray-200">
          <p class="text-sm text-gray-600 mb-3">
            Join 10,000+ families who have discovered Mind Foundry
          </p>
          <div class="flex items-center justify-center gap-1">
            {[...Array(5)].map(() => (
              <svg class="w-5 h-5 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
              </svg>
            ))}
            <span class="ml-2 text-sm font-semibold text-gray-700">4.9/5.0 (2,847 reviews)</span>
          </div>
        </div>

      </div>
    </div>
  </div>
</BaseLayout>