---
export const prerender = true;

import CorporateLayout from '../layouts/CorporateLayout.astro';

const lastUpdated = 'December 1, 2024';

const sections = [
  { id: 'agreement', title: '1. Agreement to Terms', color: 'mf-teal' },
  { id: 'services', title: '2. Description of Services', color: 'mf-blue' },
  { id: 'account', title: '3. Account Registration', color: 'mf-pink' },
  { id: 'purchases', title: '4. Product Purchases and Refunds', color: 'mf-mint' },
  { id: 'coppa', title: '5. Children\'s Accounts (COPPA)', color: 'mf-navy' },
  { id: 'use', title: '6. Acceptable Use', color: 'mf-teal' },
  { id: 'ip', title: '7. Intellectual Property', color: 'mf-blue' },
  { id: 'warranties', title: '8. Disclaimer of Warranties', color: 'mf-pink' },
  { id: 'liability', title: '9. Limitation of Liability', color: 'mf-navy' },
  { id: 'changes', title: '10. Changes to Terms', color: 'mf-teal' },
  { id: 'law', title: '11. Governing Law', color: 'mf-blue' },
  { id: 'contact', title: '12. Contact Us', color: 'mf-pink' },
];
---

<CorporateLayout title="Terms of Service - Mind Foundry">
  <!-- Hero Banner -->
  <section class="bg-gradient-to-r from-mf-navy via-mf-blue to-mf-teal py-16 relative overflow-hidden">
    <div class="absolute top-0 right-0 w-64 h-64 bg-mf-pink/20 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 left-0 w-48 h-48 bg-mf-mint/30 rounded-full blur-2xl"></div>
    <div class="container mx-auto px-4 max-w-6xl text-center relative z-10">
      <div class="inline-block px-6 py-2 bg-white/20 rounded-full mb-4">
        <span class="text-white/90 font-corp-body">Legal</span>
      </div>
      <h1 class="font-display text-h1 text-white mb-4 drop-shadow-lg">Terms of Service</h1>
      <p class="text-xl text-white/90 max-w-2xl mx-auto font-corp-body">
        Last updated: {lastUpdated}
      </p>
    </div>
  </section>

  <div class="bg-gradient-to-b from-mf-mint/10 to-white min-h-screen">
    <div class="container mx-auto px-4 py-12 max-w-6xl">
      <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">

        <!-- Sidebar Navigation -->
        <div class="lg:col-span-1">
          <div class="bg-white rounded-2xl shadow-xl p-6 sticky top-8 border-l-4 border-mf-teal">
            <h3 class="font-display text-lg text-text-dark mb-4">Quick Navigation</h3>
            <nav class="space-y-2">
              {sections.map((section) => (
                <a
                  href={`#${section.id}`}
                  class="block text-sm text-text-body hover:text-mf-teal transition-colors py-1 border-l-2 border-transparent hover:border-mf-teal pl-3 font-corp-body"
                >
                  {section.title}
                </a>
              ))}
            </nav>
          </div>
        </div>

        <!-- Main Content -->
        <div class="lg:col-span-3">
          <div class="bg-white rounded-3xl shadow-2xl overflow-hidden">

            <!-- Introduction Card -->
            <div class="bg-gradient-to-r from-mf-teal to-mf-blue p-8 text-white">
              <div class="flex items-start gap-4">
                <div class="w-16 h-16 rounded-2xl bg-white/20 flex items-center justify-center text-3xl flex-shrink-0">
                  üìú
                </div>
                <div>
                  <h2 class="font-display text-h3 mb-2">Welcome to Mind Foundry</h2>
                  <p class="text-white/90 font-corp-body">
                    These terms govern your use of our educational products and services. Please read them carefully.
                  </p>
                </div>
              </div>
            </div>

            <div class="p-8 space-y-10">

              <!-- Section 1 -->
              <section id="agreement" class="scroll-mt-8">
                <div class="flex items-center gap-3 mb-4">
                  <div class="w-10 h-10 rounded-xl bg-mf-teal flex items-center justify-center text-white font-bold">1</div>
                  <h2 class="font-display text-h3 text-text-dark">Agreement to Terms</h2>
                </div>
                <div class="pl-13 space-y-4 font-corp-body text-text-body">
                  <p>
                    By accessing or using Mind Foundry's website, products, and services (collectively, the "Services"), you agree to be bound by these Terms of Service ("Terms"). If you do not agree to these Terms, please do not use our Services.
                  </p>
                  <p>
                    These Terms apply to all visitors, users, and others who access or use the Services. By using the Services, you represent that you are at least 18 years old, or if you are under 18, that you have obtained parental or guardian consent to use the Services.
                  </p>
                </div>
              </section>

              <!-- Section 2 -->
              <section id="services" class="scroll-mt-8">
                <div class="flex items-center gap-3 mb-4">
                  <div class="w-10 h-10 rounded-xl bg-mf-blue flex items-center justify-center text-white font-bold">2</div>
                  <h2 class="font-display text-h3 text-text-dark">Description of Services</h2>
                </div>
                <div class="pl-13 space-y-4 font-corp-body text-text-body">
                  <p>Mind Foundry provides educational products and services designed for children ages 5-18, including:</p>
                  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 my-6">
                    <div class="bg-mf-teal/10 rounded-xl p-4 border-2 border-mf-teal/20">
                      <span class="text-2xl mb-2 block">üìö</span>
                      <span class="font-display text-text-dark">Physical workbooks</span>
                      <p class="text-sm mt-1">Badge-based learning curriculum</p>
                    </div>
                    <div class="bg-mf-blue/10 rounded-xl p-4 border-2 border-mf-blue/20">
                      <span class="text-2xl mb-2 block">üíª</span>
                      <span class="font-display text-text-dark">Digital platform</span>
                      <p class="text-sm mt-1">Track badges and progress</p>
                    </div>
                    <div class="bg-mf-pink/10 rounded-xl p-4 border-2 border-mf-pink/20">
                      <span class="text-2xl mb-2 block">üè´</span>
                      <span class="font-display text-text-dark">Learning centers</span>
                      <p class="text-sm mt-1">In-person instruction (where available)</p>
                    </div>
                    <div class="bg-mf-mint/10 rounded-xl p-4 border-2 border-mf-mint/20">
                      <span class="text-2xl mb-2 block">üåê</span>
                      <span class="font-display text-text-dark">Online platform</span>
                      <p class="text-sm mt-1">Coming soon</p>
                    </div>
                  </div>
                  <p>We reserve the right to modify, suspend, or discontinue any part of our Services at any time without prior notice.</p>
                </div>
              </section>

              <!-- Section 3 -->
              <section id="account" class="scroll-mt-8">
                <div class="flex items-center gap-3 mb-4">
                  <div class="w-10 h-10 rounded-xl bg-mf-pink flex items-center justify-center text-white font-bold">3</div>
                  <h2 class="font-display text-h3 text-text-dark">Account Registration</h2>
                </div>
                <div class="pl-13 space-y-4 font-corp-body text-text-body">
                  <p>To access certain features of our Services, you may be required to create an account. When you create an account, you agree to:</p>
                  <ul class="space-y-3 my-4">
                    {[
                      'Provide accurate, current, and complete information',
                      'Maintain and update your information to keep it accurate',
                      'Keep your password secure and confidential',
                      'Accept responsibility for all activities under your account',
                      'Notify us immediately of any unauthorized use'
                    ].map((item) => (
                      <li class="flex items-start gap-3">
                        <span class="w-6 h-6 rounded-full bg-mf-pink/20 flex items-center justify-center flex-shrink-0 mt-0.5">
                          <svg class="w-4 h-4 text-mf-pink" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                          </svg>
                        </span>
                        <span>{item}</span>
                      </li>
                    ))}
                  </ul>
                  <p>We reserve the right to suspend or terminate accounts that violate these Terms or for any other reason at our discretion.</p>
                </div>
              </section>

              <!-- Section 4 -->
              <section id="purchases" class="scroll-mt-8">
                <div class="flex items-center gap-3 mb-4">
                  <div class="w-10 h-10 rounded-xl bg-mf-mint flex items-center justify-center text-mf-navy font-bold">4</div>
                  <h2 class="font-display text-h3 text-text-dark">Product Purchases and Refunds</h2>
                </div>
                <div class="pl-13 space-y-4 font-corp-body text-text-body">
